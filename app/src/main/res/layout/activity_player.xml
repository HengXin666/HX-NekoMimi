<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/player_background"
    android:theme="@style/Theme.NekoMimi.Player"
    android:fitsSystemWindows="true">

    <!-- 顶部工具栏 -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:navigationIcon="@drawable/ic_back_white"
        app:titleTextColor="@color/player_text"
        app:subtitleTextColor="@color/player_text_secondary" />

    <!-- 上次播放位置提示 -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardLastPosition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:visibility="gone"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="#33FFFFFF"
        app:strokeWidth="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="12dp"
            android:paddingVertical="8dp">

            <TextView
                android:id="@+id/tvLastPositionHint"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/player_text_secondary"
                android:textSize="13sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnJumpToPosition"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="@string/jump_to_position"
                android:textColor="@color/subtitle_highlight"
                android:textSize="13sp" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- 字幕显示区域 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerSubtitles"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingHorizontal="24dp"
        android:paddingVertical="16dp"
        android:clipToPadding="false"
        android:scrollbars="vertical" />

    <!-- 无字幕提示 -->
    <TextView
        android:id="@+id/tvNoSubtitle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/no_subtitle"
        android:textColor="@color/player_text_secondary"
        android:textSize="16sp"
        android:visibility="gone" />

    <!-- 底部播放控制区 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="24dp"
        android:paddingTop="8dp"
        android:paddingBottom="24dp">

        <!-- 进度条 -->
        <com.google.android.material.slider.Slider
            android:id="@+id/sliderProgress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:valueFrom="0"
            android:valueTo="100"
            app:trackColorActive="@color/primary_light"
            app:trackColorInactive="@color/progress_bar_bg"
            app:thumbColor="@color/primary_light"
            app:thumbRadius="6dp"
            app:trackHeight="4dp" />

        <!-- 时间显示 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="-8dp">

            <TextView
                android:id="@+id/tvCurrentTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:textColor="@color/player_text_secondary"
                android:textSize="12sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tvTotalTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:textColor="@color/player_text_secondary"
                android:textSize="12sp" />

        </LinearLayout>

        <!-- 播放控制按钮 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <!-- 快退 30s -->
            <ImageButton
                android:id="@+id/btnRewind"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_replay_30"
                app:tint="@color/player_text"
                android:contentDescription="快退30秒" />

            <View
                android:layout_width="24dp"
                android:layout_height="0dp" />

            <!-- 播放/暂停 -->
            <ImageButton
                android:id="@+id/btnPlayPause"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:background="@drawable/bg_play_button"
                android:src="@drawable/ic_play"
                android:scaleType="center"
                app:tint="@color/player_background"
                android:contentDescription="播放/暂停" />

            <View
                android:layout_width="24dp"
                android:layout_height="0dp" />

            <!-- 快进 30s -->
            <ImageButton
                android:id="@+id/btnForward"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_forward_30"
                app:tint="@color/player_text"
                android:contentDescription="快进30秒" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
